# ML Expert Agent Engine — Environment Configuration
# =====================================================
# Copy to .env and customize

# ── Server ──
HOST=0.0.0.0
PORT=8001
DEBUG=false
LOG_LEVEL=INFO

# ── Database ──
# SQLite (default — zero config):
DATABASE_URL=sqlite:///./ml_agent.db
# PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/ml_agent

# ── CORS (allow your existing app on port 8000) ──
CORS_ORIGINS=http://localhost:8000,http://localhost:3000,*

# ── LLM Reasoner (optional — engine works fully in rules_only mode) ──
AGENT_LLM_PROVIDER=rules_only
# AGENT_LLM_PROVIDER=openai
# AGENT_LLM_API_KEY=sk-...
# AGENT_LLM_MODEL=gpt-4o-mini

# ── Feature Flags ──
ENABLE_DOMAIN_PROFILES=true
ENABLE_SEMANTIC_INTENT=true
ENABLE_STATISTICAL_TESTS=true
ENABLE_FEEDBACK_TRACKER=true
ENABLE_DOMAIN_COSTS=true
